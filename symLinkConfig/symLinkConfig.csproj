<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <UseMonoPosix>true</UseMonoPosix>
    <DefineConstants Condition="$(UseMonoPosix)">$(DefineConstants);USE_MONO_POSIX</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="PollingFileProvider\**" />
    <Content Remove="PollingFileProvider\**" />
    <EmbeddedResource Remove="PollingFileProvider\**" />
    <None Remove="PollingFileProvider\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Condition="$(UseMonoPosix)" Include="Mono.Posix.NETStandard" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="config\**\*.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
